<Window x:Class="MacrixPracticalTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name"/>
                <DataGridTextColumn Header="Last Name"/>
                <DataGridTextColumn Header="Street Name"/>
                <DataGridTextColumn Header="House Number"/>
                <DataGridTextColumn Header="Apartment Number"/>
                <DataGridTextColumn Header="Postal Code"/>
                <DataGridTextColumn Header="Town"/>
                <DataGridTextColumn Header="Phone Number"/>
                <DataGridTextColumn Header="Date of Birth"/>
                <DataGridTextColumn Header="Age" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
